<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/recycler_margin_bottom"
    android:layout_marginEnd="@dimen/recycler_margin_horizontal"
    android:layout_marginLeft="@dimen/recycler_margin_horizontal"
    android:layout_marginRight="@dimen/recycler_margin_horizontal"
    android:layout_marginStart="@dimen/recycler_margin_horizontal"
    android:layout_marginTop="@dimen/recycler_margin_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/recycler_padding_vertical"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/recycler_padding_horizontal"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/recycler_padding_horizontal"
        android:paddingTop="@dimen/recycler_padding_vertical">

        <TextView
            android:id="@+id/list_item_park_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:textSize="@dimen/font_large"
            tools:text="Park Name" />

        <TextView
            android:id="@+id/list_item_park_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/font_medium"
            tools:text="228m" />
    </LinearLayout>

</android.support.v7.widget.CardView>